{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MASM + MSVC",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "ml64 /c 01AddSubfasm.asm && cl /EHsc 01main.cpp 01misc.cpp 01AddSubfasm.obj"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build with GCC",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "Build active file using GCC"
        }
    ]
}
